<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#80cbc4"
    tools:context="fr.wildcodeschool.apprenti.javabien.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/boutonrond"
        android:text="Java Basics"
        android:id="@+id/button"
        android:layout_marginTop="76dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/boutonrond"
        android:text="Concept"
        android:id="@+id/button2"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/boutonrond"
        android:text="Trucs Durs"
        android:id="@+id/button4"
        android:layout_above="@+id/logowild"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="25dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/boutonrond"
        android:text="Syntaxe"
        android:layout_marginBottom="10dp"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/button" />


    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/boutonrond"
        android:text="Hard Stuff"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_alignStart="@+id/button3" />
</LinearLayout>
        </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logowild"
        android:src="@drawable/logowild"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</LinearLayout>
