<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:gravity="center_vertical"

    android:orientation="vertical"
    tools:context="fr.wildcodeschool.apprenti.javabien.MainActivity">


    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bouton_info"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/boutonfo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="210dp">

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/jf1"
            android:text="1"
            android:textColor="#58c4b8"
            android:textSize="20dp"
            android:textStyle="bold"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_below="@+id/button"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="221dp"
            android:layout_toStartOf="@+id/button"
            android:background="@drawable/jo2"
            android:text="2"
            android:textColor="#58c4b8"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_above="@+id/logowild"
            android:layout_alignStart="@+id/button2"
            android:layout_marginLeft="221dp"
            android:background="@drawable/jo3"
            android:text="3"
            android:textColor="#58c4b8"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/button3"
                android:layout_alignTop="@+id/button4"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/jo5"
                android:text="5"
                android:textColor="#58c4b8"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="144dp"
                android:layout_height="127dp"
                android:layout_alignTop="@+id/button2"

                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/button"
                android:background="@drawable/jo4"
                android:text="4"
                android:textColor="#58c4b8"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
