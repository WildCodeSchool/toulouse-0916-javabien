<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#80cbc4"
    tools:context="fr.wildcodeschool.apprenti.javabien.ExoActivity">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="La Question blablbalbal"
        android:id="@+id/info" />

    <Button
        android:text="4"
        android:background="@drawable/boutonrond"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/boutonVrai"
        android:layout_alignBottom="@+id/boutonFaux"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/boutonFaux" />

    <Button
        android:text="&quot;4&quot;"
        android:background="@drawable/boutonrond"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/boutonFaux"
        android:layout_marginTop="130dp"
        android:layout_below="@+id/question"
        android:layout_alignParentStart="true" />

    <Button
        android:text="4.0"
        android:background="@drawable/boutonrond"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/boutonFaux2"
        android:layout_alignBottom="@+id/boutonVrai"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/boutonVrai" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text= "Réponse : “4”, 4 ou 4.0 :"
        android:id= "@+id/question"
        android:layout_marginTop="115dp"
        android:layout_below="@+id/info"
        android:layout_toStartOf="@+id/boutonFaux2" />

</RelativeLayout>