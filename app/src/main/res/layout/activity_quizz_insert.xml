<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    android2:layout_width="match_parent"
    android2:layout_height="match_parent"
    android2:background="@drawable/fond4"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/custom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:gravity="center"
        tools:context="fr.wildcodeschool.apprenti.javabien.ExoActivityInsert">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:padding="18dp"
            android:background="#8FFF"
            android:textSize="18dp"
            android:text="bblabllalbllblalbalbllalblalblallablallalla\n bbbb\n blblb\n bla"
            android:id="@+id/info"
            android:layout_marginBottom="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text= "Réponse : “4”, 4 ou 4.0 :"
            android:id= "@+id/question"
            android:layout_below="@+id/info"
            android:layout_gravity="center_horizontal" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tapez moi"
            android:id="@+id/reponse"
            android:background="#fbfbfb"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/question"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:id="@+id/suivant"
            android:visibility="invisible"
            android:text="Suivant"
            />

        <Button
            android:text="Validez"
            android:background="@drawable/boutonrond"
            android:layout_marginTop="40dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/boutonReponse"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>