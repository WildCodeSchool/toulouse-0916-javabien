<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    android2:layout_width="match_parent"
    android2:layout_height="match_parent"
    android2:background="@drawable/fond4"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/fond4"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="fr.wildcodeschool.apprenti.javabien.ExoActivityQcm">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8fff"
    android:textSize="18dp"
    android:text="La Question blablbalbal"
    android:id="@+id/info"
    android:padding="18dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text= "Réponse : “4”, 4 ou 4.0 :"
        android:id= "@+id/question"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/boutonFaux2" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:text="4"
        android:textAlignment="center"
        android:background="@drawable/boutonrond"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:id="@+id/boutonVrai"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:textColor="#fff"/>

    <Button
        android:text="&quot;4&quot;"
        android:layout_alignParentLeft="true"
        android:background="@drawable/boutonrond"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/boutonFaux"
        android:layout_margin="20dp"
        android:padding="2dp"
        android:textColor="#fff"/>

    <Button
        android:text="4.0"
        android:background="@drawable/boutonrond"
        android:layout_alignParentRight="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:padding="2dp"
        android:id="@+id/boutonFaux2"
        android:textColor="#fff"

        />
    </RelativeLayout>
</LinearLayout>

    <Button
        android:text="Suivant"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:id="@+id/suivant"
        android:visibility="invisible"/>

</LinearLayout>
    </ScrollView>