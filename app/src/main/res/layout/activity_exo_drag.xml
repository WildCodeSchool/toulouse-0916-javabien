<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold" />


        <com.jmedeisis.draglinearlayout.DragLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/drag1"
                style='@style/ExoDrag' />

            <TextView
                android:id="@+id/drag2"
                style='@style/ExoDrag' />

            <TextView
                android:id="@+id/drag3"
                style='@style/ExoDrag' />

            <TextView
                android:id="@+id/drag4"
                style='@style/ExoDrag' />


        </com.jmedeisis.draglinearlayout.DragLinearLayout>

        <Button
            android:id="@+id/suivant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/boutonrect"
            android:text="Suivant"
            android:visibility="invisible" />

        <Button
            android:id="@+id/validate_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@drawable/boutonrond"
            android:text="Valider"
            android:textColor="#fff" />

    </LinearLayout>


</ScrollView>